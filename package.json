{
  "name": "spellwood",
  "version": "0.1.7",
  "description": "DotA 2 hero defence mod",
  "keywords": [
    "dota",
    "dota 2",
    "mod",
    "custom",
    "custom game",
    "game",
    "hero defence",
    "hero defense",
    "spellwood",
    "dagerikhl"
  ],
  "license": "MIT",
  "author": {
    "email": "dagerikhl@gmail.com",
    "name": "Dag Erik LÃ¸vgren",
    "url": "https://github.com/dagerikhl"
  },
  "homepage": "https://github.com/dagerikhl/spellwood",
  "repository": {
    "url": "https://github.com/dagerikhl/spellwood",
    "type": "git"
  },
  "private": false,
  "scripts": {
    "postinstall": "node scripts/install.js",
    "launch": "node scripts/launch.js",
    "build": "run-p build:*",
    "build:panorama": "tsc --project content/panorama/scripts/custom_game/tsconfig.json",
    "build:vscripts": "tstl --project game/scripts/vscripts/tsconfig.json",
    "build:jsKvTranspilator": "node scripts/jsKvTranspilator.js ./game/scripts",
    "dev": "run-p dev:*",
    "dev:panorama": "tsc --project content/panorama/scripts/custom_game/tsconfig.json --watch",
    "dev:vscripts": "tstl --project game/scripts/vscripts/tsconfig.json --watch",
    "dev:localizationCompiler": "tsc --project node_modules/~resource/tsconfig.json",
    "dev:localizationCompilerWatcher": "tsc --project node_modules/~resource/tsconfig.json --watch",
    "dev:runlocalizationWatcher": "node node_modules/~generator/fsWatcher.js",
    "dev:jsKvTranspilator": "nodemon -w ./game/scripts -e .kv.js scripts/jsKvTranspilator.js ./game/scripts",
    "init": "link-module-alias && node node_modules/~generator/init.js",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@moddota/dota-lua-types": "4.7.2",
    "@moddota/panorama-types": "1.6.1",
    "@shushishtok/tooltip_generator": "1.5.6",
    "@types/node": "14.14.22",
    "find-steam-app": "1.0.2",
    "fs-extra": "9.0.0",
    "husky": "5.2.0",
    "link-module-alias": "1.2.0",
    "node-watch": "0.7.1",
    "nodemon": "2.0.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "standard-version": "9.1.1",
    "ts-node": "9.1.1",
    "typescript": "3.9.3",
    "typescript-to-lua": "0.34.0",
    "valve-kv": "1.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "_moduleAliases": {
    "~resource": "game/resource",
    "~generator": "node_modules/@shushishtok/tooltip_generator"
  }
}
